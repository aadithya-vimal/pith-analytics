# Environment Variables Template

# Copy this file to .env.local for local development
# Copy this file to .env.production for production builds

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=production

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable AI insights feature
VITE_ENABLE_AI=true

# Enable/disable visualization feature
VITE_ENABLE_VISUALIZATION=true

# Enable/disable SQL console
VITE_ENABLE_SQL_CONSOLE=true

# ============================================
# PERFORMANCE
# ============================================
# Enable performance monitoring in production
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Enable detailed logging (development only)
VITE_ENABLE_DETAILED_LOGGING=false

# ============================================
# LIMITS
# ============================================
# Maximum file upload size in MB
VITE_MAX_FILE_SIZE_MB=500

# Default query result limit
VITE_DEFAULT_QUERY_LIMIT=1000

# ============================================
# AI CONFIGURATION
# ============================================
# AI model name (from @mlc-ai/web-llm)
VITE_AI_MODEL_NAME=Llama-3.2-3B-Instruct-q4f32_1-MLC

# AI initialization timeout (ms)
VITE_AI_INIT_TIMEOUT=60000

# ============================================
# NOTES
# ============================================
# - All VITE_ prefixed variables are exposed to the client
# - Never put sensitive data in environment variables
# - This app is local-first, no backend API keys needed
